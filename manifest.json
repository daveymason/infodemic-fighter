{
  "manifest_version": 3,
  "name": "Infodemic Fighter",
  "version": "0.1.0",
  "description": "Shows political bias and reliability indicators for news sources in search results",
  "icons": {
    "16": "/assets/icons/icon16.png",
    "48": "/assets/icons/icon48.png",
    "128": "/assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "/assets/icons/icon16.png",
      "48": "/assets/icons/icon48.png",
      "128": "/assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.google.com/search*",
    "*://www.bing.com/search*",
    "*://duckduckgo.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.bing.com/search*",
        "*://duckduckgo.com/*"
      ],
      "js": [
        "lib/utils.js",
        "lib/bias-detection.js",
        "content/search-engines/google.js",
        "content/search-engines/bing.js", 
        "content/search-engines/duckduckgo.js",
        "content/content.js"
      ],
      "css": [
        "assets/styles/common.css",
        "assets/styles/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "data/media-bias-data.json",
      "assets/styles/*.css",
      "assets/icons/*.png",
      "assets/icons/*.svg"
    ],
    "matches": ["<all_urls>"]
  }]
}
